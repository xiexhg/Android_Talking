<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp">

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/left_userhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/mini_avatar_shadow"/>
        <TextView
            android:id="@+id/left_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chatfrom_bg_normal"
            style="@style/chat_content_date_style"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/left_userhead" />
        <TextView
            android:id="@+id/left_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/left_userhead"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/left_msg"
            style="@style/chat_text_name_style"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/right_msg"
            android:layout_toLeftOf="@+id/right_userhead"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:background="@drawable/chatto_bg_normal"
            style="@style/chat_content_date_style"/>
        <ImageView
            android:id="@+id/right_userhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/mini_avatar_shadow"/>
        <TextView
            android:id="@+id/right_username"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/right_userhead"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@+id/right_msg"
            style="@style/chat_text_name_style"/>

    </RelativeLayout>


</LinearLayout>
